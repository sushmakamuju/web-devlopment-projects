<% if (weatherRightNow.rain) { %>
  <div>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
         class="bi bi-cloud-lightning-rain" viewBox="0 0 16 16">
      <path d="M2.658 11.026a.5.5 0 0 1 .316.632l-.5 1.5a.5.5 0 1 1-.948-.316l.5-1.5a.5.5 0 0 1 .632-.316"/>
    </svg>
    <p>Precipitation</p>
    <p><%= weatherRightNow.rain["1h"] %></p>
  </div>
<% } %>

<% if (weatherRightNow.snow) { %>
  <div>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
         class="bi bi-thermometer-snow" viewBox="0 0 16 16">
      <path d="M5 12.5a1.5 1.5 0 1 1-2-1.415V9.5a.5.5 0 0 1 1 0v1.585A1.5 1.5 0 0 1 5 12.5"/>
    </svg>
    <p>Snow</p>
    <p><%= weatherRightNow.snow["1h"] %></p>
  </div>
<% } %>
